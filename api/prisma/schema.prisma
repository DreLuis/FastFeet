generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  cpf      String   @unique
  password String
  role     UserRole @default(DELIVERY_MAN)
}

enum UserRole {
  ADMIN
  DELIVERY_MAN
}

enum DelivertType {
  WITHDRAWAL
  DELIVERY
}

model Parcel {
  id String @id @default(uuid())
  cep Int 
  status String
  codigorastreio String
  tipoEntrega DelivertType @default(DELIVERY)
}

model Recipient {
  id String @id @default(uuid())
  name String
}